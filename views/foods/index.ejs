<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Pantry</title>
  </head>
  <body>
      <%- include('../partials/_navbar.ejs') %>
    <h1>Welcome to my Pantry</h1>
    <a href="/users/<%=user._id%>/foods/new">Add New item</a>
    <ul>
    <% pantry.forEach((item)=>{ %>
      <li><%= item.quantity %> <%= item.name %>
      <form action="/users/<%= user._id %>/foods/<%= item._id %>?_method=DELETE" method="POST">
            <button type="submit">Delete <%=item.name%></button>
          </form>
          <a href="/users/<%= user._id %>/foods/<%= item._id %>/edit">
            Edit item
          </a>
                </li>
    <% }) %>
  </ul>
  </body>
</html>
